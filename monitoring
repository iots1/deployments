version: '3.8'

networks:
  monitoring:
    #driver: bridge

volumes:
  prometheus_data:
    external: true
  grafana_data: 
    external: true

services:
  node_exporter:
    image: prom/node-exporter:v1.5.0
    container_name: node_exporter
    command:
      - '--path.rootfs=/host'
    network_mode: host
    pid: host
    restart: unless-stopped
    volumes:
      - '/:/host:ro,rslave'
    ports: 
      - 9100:9100
    networks:
      - monitoring
  blackbox_exporter:
    image: prom/blackbox-exporter:v0.24.0
    container_name: blackbox_exporter
    command:
      - '--config.file=/etc/blackbox/blackbox.yml'
    network_mode: host
    pid: host
    restart: unless-stopped
    ports: 
      - 9101:9115
    volumes:
      - /root/monitoring/blackbox:/etc/blackbox
    networks:
      - monitoring

  alertmanager:
    image: prom/alertmanager:v0.27.0
    container_name: alertmanager
    network_mode: host
    pid: host
    restart: unless-stopped
    ports: 
      - 9102:9093
    networks:
      - monitoring

  cadvisor:
    container_name: cadvisor
    image: gcr.io/cadvisor/cadvisor:v0.47.2

    ports:
      - 9103:8080
    volumes: 
      - /:/rootfs:ro
      - /var/run:/var/run:rw
      - /sys:/sys:ro
      - /var/lib/docker/:/var/lib/docker:ro
      - /dev/disk/:/dev/disk:ro
      - /etc/machine-id:/etc/machine-id:ro
      - /var/lib/dbus/machine-id:/var/lib/dbus/machine-id:ro
    devices:
      - /dev/kmsg:/dev/kmsg
      
  prometheus:
    image: prom/prometheus:v2.37.9
    restart: unless-stopped
    volumes:
      - /root/monitoring/prometheus.yml:/etc/prometheus/prometheus.yml
      - /root/monitoring/prometheus_data:/prometheus
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      #- '--storage.tsdb.path=/prometheus'
      #- '--web.console.libraries=/etc/prometheus/console_libraries'
      #- '--web.console.templates=/etc/prometheus/consoles'
      #- '--web.enable-lifecycle'
    ports:
      - 9090:9090
    networks:
      - monitoring

  grafana:
    image: grafana/grafana:10.1.1
    volumes: 
      - /root/monitoring/grafana_data:/var/lib/grafana
    environment:
      - GF_SECURITY_ADMIN_USER=admin
      - GF_SECURITY_ADMIN_PASSWORD=ecsRocket23
      - GF_USERS_ALLOW_SIGN_UP=false
    depends_on:
      - prometheus
    ports:
      - 9091:3000
    networks: 
      - monitoring

